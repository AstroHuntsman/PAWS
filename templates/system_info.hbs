{% extends "site/panel.hbs" %}
{% block title %} System Info {% end %}
{% block panel %}
  <dl id="mount_info" class="dl-horizontal">
    <dt>UTC Time:</dt><dd><span class="utctime">N/A</span></dd>
    <dt>Local Time:</dt><dd><span class="localtime">N/A</span></dd>
    <dt>Sidereal Time:</dt><dd><span class="siderealtime">N/A</span></dd>
    <dt>Sun:</dt><dd>
      <small>Set: </small><span class="local_evening_astro_time">N/A</span> <small>UTC</small><br />
      <small>Rise: </small><span class="local_morning_astro_time">N/A</span> <small>UTC</small><br />
    </dd>
    <dt>Moon:</dt><dd>
      <small>Alt: </small><span class="local_moon_alt">N/A</span>&deg;<br />
      <small>Full: </small><span class="local_moon_illumination">N/A</span> %<br />
    </dd>
    <dt>Power:</dt><dd><span class="">&nbsp;</span></dd>
    <dt></dt><dd>
      <small>Main: </small><span class="current_main">N/A</span><br />
      <small>Camera: </small><span class="current_cameras">N/A</span><br />
      <small>Fan: </small><span class="current_fan">N/A</span><br />
      <small>Mount: </small><span class="current_mount">N/A</span><br />
    </dd>    
  </dl>
{% end %}